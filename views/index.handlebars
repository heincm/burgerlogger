<main>
  <div class="jumbotron">
    <h1 class="display-4">Burgerlogger</h1>
    <p class="lead">Create your own burgers and devour them!</p>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <img src="../public/assets/img/burger.png" alt="burger" id="burgerImage">
      </div>
      <div class="col-md-6 col-sm-12">
        <img src="../public/assets/img/eat_burger.jpg" alt="eating burger">
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <h3>Uneaten Burgers</h3>
        {{#each burgers}}
        {{#unless this.devoured}}
        <p>{{this.id}}. {{this.burger_name}}</p>
        <div>
          <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
            <button type="submit" class="btn btn-danger">Devour!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>

      <div class="col-md-6 col-sm-12">
        <h3>Eaten burgers</h3>
        {{#each burgers}}
        {{#if this.devoured}}
        <div>
          <p class='burgerEaten text-muted'>{{this.burger_name}}</p>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>


<div class="container pb-4">
  <div class="row mx-center">
    <div class="col align-self-center">
      <h2>Add A Burger Option</h2>
      <form action="api/burgers" method="POST">
        <input type="text" id="burger_name" name="burger_name">
        <button type="submit" class="btn-primary">Add a Burger</button>
      </form>
    </div>
  </div>
</div>