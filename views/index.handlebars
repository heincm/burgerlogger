<main>
  <div class="container">
    <h1>Burgers!</h1>
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
        {{#unless this.devoured}}
        <span>{{this.id}}. {{this.burger_name}}</span>
        <div>
          <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
            <button type="submit">Devour!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
        {{#if this.devoured}}
        <div class='burgerEaten'>
          <div>
            {{this.burger_name}}
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>


<div class="container">
  <div class="row">
    <div class="col s12">
      <h2>Add A Burger Option</h2>
      <form action="api/burgers" method="POST">
        <input type="text" id="burger_name" name="burger_name">
        <button type="submit">Add a Burger</button>
      </form>
    </div>
  </div>
</div>